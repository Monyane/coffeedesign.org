.icon
  @extend $grid.inline
  border-spacing unitz(0.25) 0
  margin 0 (- unitz(0.25))
  font-weight 700
  font-style normal
  font-variant normal
  text-transform none
  text-decoration none !important
  color inherit

  &:hover
    .icon-text
      text-decoration underline

  + .icon
    margin-left unitz(0.15)

.icon-glyph
  color inherit
  vertical-align middle

  &:before
    font-family 'coffeedesign'
    speak none
    display block
    font-size 1.5em
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    text-decoration none
    line-height 1

    /* Better Font Rendering =========== */
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

  
  &.sub-youtube:before {
    content: "\e600";
  }
  &.sub-mail:before {
    content: "\e601";
  }
  &.sub-twitter:before {
    content: "\e602";
  }
  &.sub-facebook:before {
    content: "\e603";
  }
  &.sub-arrow-down:before {
    content: "\e604";
  }
  &.sub-arrow-up:before {
    content: "\e606";
  }
  &.sub-website:before {
    content: "\e605";
  }
  &.sub-googleplus:before {
    content: "\e607";
  }
  &.sub-pinterest:before {
    content: "\e608";
  }
  &.sub-tumbler:before {
    content: "\e609";
  }
  &.sub-linkedin:before {
    content: "\e60a";
  }
  &.sub-dribbble:before {
    content: "\e60d";
  }
  &.sub-rdio:before {
    content: "\e60b";
  }
  &.sub-spotify:before {
    content: "\e60c";
  }
  &.sub-instagram:before {
    content: "\e60e";
  }
  &.sub-github:before {
    content: "\e60f";
  }


.icon-text
  line-height 1
  vertical-align middle
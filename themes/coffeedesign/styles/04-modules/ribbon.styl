.ribbon
  position relative
  z-index 0
  background teal
  display table
  height unitz(1.75)
  font-family 'Montserrat', sans-serif
  font-weight 700
  text-transform uppercase
  text-align center
  color white

  &:before
  &:after
    content ""
    display block
    position absolute
    z-index 1
    right - unitz(1.75/2)
    border-width unitz(1.75/2)
    border-style solid
    border-color transparent

  &:before
    top 0
    border-top-color teal

  &:after
    bottom 0
    border-bottom-color teal

.ribbon-text
  display table-cell
  vertical-align middle
  background teal
  padding 0 unitz(1)
  z-index 1

.ribbon-shadow
  z-index -1
  position absolute
  left - unitz(1.75/4)
  bottom - unitz(1.75/4)
  border-width unitz(1.75/4)
  border-style solid
  border-color transparent
  border-right-color darken(teal, 10)
  &:after
    content ''
    position absolute
    display block
    width 1em
    height 1em
    top -1em
    background teal

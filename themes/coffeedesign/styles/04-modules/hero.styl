.hero
  max-width 45em
  margin-right auto
  margin-left auto
  color white
  a
    color white

.hero-photo
  max-width 10em
  margin-right auto
  margin-left auto
  @media max-small
    max-width 8em

.hero-title
  null

.hero-title-link
  text-decoration none
  &:hover
    text-decoration underline

.hero-date
  font-size 1.2em
  line-height 1.25
  text-transform uppercase

.hero-excerpt
  margin-top 1em
  font-size 1.25em

.hero-grid
  border-spacing 4em

  > .col
    width 50%
    @media (max-width: 760px)
      display block
      width 100%
      margin-top 2em !important
    *
      margin-top 1em

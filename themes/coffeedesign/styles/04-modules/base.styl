*
  box-sizing border-box
  margin-bottom 0
  &:first-child
    margin-top 0

html
  width 100%

body
  position relative
  z-index 0
  margin 0
  background-color gray
  &:after
    content ''
    z-index -1
    display block
    position fixed
    top 0
    right 0
    bottom -5%
    left 0
    background-image radial-gradient(circle farthest-side at 50% -50%, rgba(teal, 0.9) 40%, rgba(violet, 0.9) 95%)

img
  display block
  max-width 100%

a
  color inherit
  text-decoration underline
  -webkit-tap-highlight-color: rgba(0,0,0,0);

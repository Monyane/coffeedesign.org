.contest-form
  min-width 20em
  background white
  color black
  @extend .pad-3, .nest-4
  @media max-small
    min-width 0

  label
    color black
    display block
    float none !important
    width auto !important

  input
    float none !important
    width 100% !important

    &[type=file]
      background none !important
      border none !important
      font-size normal !important

.usp-input-error
  width auto !important
  text-align left !important
  color red

.usp-fieldset
  margin-bottom 0 !important

.usp-hidden
  display none !important

.usp-input
.usp-textarea
  font 100%/1.5 "Lato",sans-serif
  font-size 1rem !important

.usp-submit
  @extend .button
